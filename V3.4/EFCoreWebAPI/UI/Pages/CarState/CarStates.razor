@page "/carstates"
<h3>Car states</h3>
<table class="table table-condensed table-striped table-bordered">
    <tr><th>Id</th><th>State</th><th></th></tr>
    @foreach(var carState in carStates)
    {
        <tr>
            <td>@carState.id</td>
            <td>@carState.state</td>
            <td>
                <a href="/carstates/update/@carState.id" class="btn btn-sm btn-primary">Edit</a>
                <a href="/carstates/delete/@carState.id" class="btn btn-sm btn-primary">Delete</a>                            
            </td>
        </tr>
    }


</table>
@code {
    List<CarStateViewModel> carStates { get; set; }
}
